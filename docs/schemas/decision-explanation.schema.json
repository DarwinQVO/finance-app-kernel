{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/DarwinQVO/finance-app-kernel/schemas/decision-explanation.schema.json",
  "title": "Decision Explanation",
  "description": "Explains how a normalization decision was made for a specific field (rule matched, confidence, alternatives)",
  "type": "object",
  "required": ["field", "decision", "confidence"],
  "properties": {
    "field": {
      "type": "string",
      "description": "Field name (e.g., merchant, category, amount_usd)",
      "examples": ["merchant", "category", "amount_usd", "deductible_usa"]
    },
    "decision": {
      "type": "string",
      "description": "Human-readable explanation of the decision",
      "examples": [
        "Normalized 'UBER EATS' → 'Uber Eats'",
        "Categorized as 'Business > Software'",
        "Converted 4,516 MXN → $231.78 USD"
      ]
    },
    "rule_applied": {
      "type": ["string", "null"],
      "description": "Rule ID that was applied (null if manual override)",
      "examples": ["merchant_normalization_v1.2", "category_merchant_match", null]
    },
    "rule_pattern": {
      "type": ["string", "null"],
      "description": "Pattern that matched (e.g., 'merchant=uber → Food')",
      "examples": [
        "merchant='uber' → Food",
        "amount > 1000 AND merchant='hotel' → Travel > Lodging",
        null
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score (0-1, where 1 = 100% confident)",
      "examples": [0.87, 0.95, 1.0]
    },
    "alternatives_considered": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Other options that were considered but rejected",
      "examples": [
        [
          "Business > Travel (rejected: no business keywords in merchant)",
          "Personal > Entertainment (rejected: confidence too low)"
        ]
      ]
    },
    "manual_override": {
      "type": "boolean",
      "description": "Whether this was manually corrected (true) or auto-decided (false)",
      "default": false
    },
    "metadata": {
      "type": "object",
      "description": "Additional decision context (exchange rates, data sources, thresholds, etc.)",
      "properties": {
        "exchange_rate": {
          "type": "number",
          "description": "Exchange rate used (if applicable)"
        },
        "rate_source": {
          "type": "string",
          "description": "Source of exchange rate"
        },
        "threshold": {
          "type": "number",
          "description": "Threshold value (for range-based rules)"
        },
        "corrected_by": {
          "type": "string",
          "description": "User who made manual correction (if manual_override = true)"
        },
        "corrected_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of manual correction"
        },
        "reason": {
          "type": "string",
          "description": "User-provided reason for manual correction"
        }
      },
      "additionalProperties": true
    }
  },
  "examples": [
    {
      "field": "merchant",
      "decision": "Normalized 'AEROMEXICO MEX' → 'Aeromexico'",
      "rule_applied": "merchant_normalization_v1.2",
      "rule_pattern": null,
      "confidence": 0.95,
      "alternatives_considered": [
        "Aeromexico Mexico (rejected: too verbose)",
        "Aeromexico Airlines (rejected: redundant)"
      ],
      "manual_override": false,
      "metadata": {}
    },
    {
      "field": "category",
      "decision": "Categorized as 'Personal > Travel > Flights'",
      "rule_applied": "category_merchant_match",
      "rule_pattern": "merchant='aeromexico' → Travel > Flights",
      "confidence": 0.87,
      "alternatives_considered": [
        "Business > Travel (rejected: no business keywords)"
      ],
      "manual_override": false,
      "metadata": {}
    },
    {
      "field": "amount_usd",
      "decision": "Converted 4,516 MXN → $231.78 USD",
      "rule_applied": "currency_conversion_v1.0",
      "rule_pattern": null,
      "confidence": 1.0,
      "alternatives_considered": [],
      "manual_override": false,
      "metadata": {
        "exchange_rate": 19.5,
        "rate_source": "internal_snapshot_2025-04-27"
      }
    },
    {
      "field": "category",
      "decision": "Categorized as 'Business > Travel' (manual override)",
      "rule_applied": null,
      "rule_pattern": null,
      "confidence": 1.0,
      "alternatives_considered": [],
      "manual_override": true,
      "metadata": {
        "corrected_by": "eugenio@example.com",
        "corrected_at": "2025-05-23T14:30:00Z",
        "reason": "This was a client meeting, not personal travel"
      }
    }
  ]
}
